<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/CalendarTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Calendar"
        android:textColor="#98FF98"
        android:textSize="50dp"
        android:textStyle="bold"/>


    <CalendarView
        android:id="@+id/CV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/CalendarTitle"
        android:layout_marginTop="-136dp" />

    <Button
            android:id="@+id/addCalendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/CV"
            android:layout_alignParentRight="true"
            android:onClick="myListener3"
            android:text="+추가" />

    <Button
        android:id="@+id/modCalendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/CV"
        android:layout_alignParentLeft="true"
        android:onClick="onClick"
        android:text="수정" />
    <Button
        android:id="@+id/delCalendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/CV"
        android:layout_centerHorizontal="true"
        android:onClick="onClick"
        android:text="삭제" />
    <EditText
        android:id="@+id/reservedCalendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/modCalendar"/>

</RelativeLayout>
